{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./",
        "sourceMap": true,
        "declaration": true,
        "module": "es2015",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "removeComments": true,
        "target": "es5",
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "include": [
        "./src/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
